@model IEnumerable<OrderAnydayProject.Models.Vendor>

@{
    ViewBag.Title = "Inactive";
}

<div class="row">
    <div class="col-xs-12">
        <div class="box box-solid box-warning">
            <div class="box-header with-border">
                <h3 class="box-title">Inactive Vendors</h3>

                <div class="box-tools">
                    <div class="box-tools pull-right">
                        <p>
                            <i class="fa fa-arrow-left"></i> @Html.ActionLink("Back To Home", "Profile", "Home")
                        </p>
                    </div>
                </div>
            </div>
            <div class="box-body">
                <div class="table-responsive">
                    <table id="table_id" class="table no-margin table-hover">
                            <thead>
                                <tr>
                                    <th>
                                        @Html.DisplayNameFor(model => model.Vendor_Name)
                                    </th>
                                    <th>
                                        @Html.DisplayNameFor(model => model.Address)
                                    </th>
                                    <th>
                                        @Html.DisplayNameFor(model => model.Phone)
                                    </th>
                                    <th>
                                        @Html.DisplayNameFor(model => model.Website)
                                    </th>
                                    <th>
                                        @Html.DisplayNameFor(model => model.Account_Manager)
                                    </th>
                                    <th>
                                        @Html.DisplayNameFor(model => model.Notes)
                                    </th>
                                    <th>
                                        @Html.DisplayNameFor(model => model.Inactive)
                                    </th>
                                    <th></th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var item in Model)
                                {
                                    <tr>
                                        <td>
                                            @Html.DisplayFor(modelItem => item.Vendor_Name)
                                        </td>
                                        <td>
                                            @Html.DisplayFor(modelItem => item.Address)
                                        </td>
                                        <td>
                                            @Html.DisplayFor(modelItem => item.Phone)
                                        </td>
                                        <td>
                                            @Html.DisplayFor(modelItem => item.Website)
                                        </td>
                                        <td>
                                            @Html.DisplayFor(modelItem => item.Account_Manager)
                                        </td>
                                        <td>
                                            @Html.DisplayFor(modelItem => item.Notes)
                                        </td>
                                        <td>
                                            @Html.DisplayFor(modelItem => item.Inactive)
                                        </td>
                                        <td>
                                            <div class="btn-group-xs pull-right">
                                                @Html.ActionLink("Edit", "Edit", new { id = item.VendorID }, new { @class = "btn btn-default" })
                                                @Html.ActionLink("Details", "Details", new { id = item.VendorID }, new { @class = "btn btn-default" })
                                                @Html.ActionLink("Delete", "Delete", new { id = item.VendorID }, new { @class = "btn btn-danger" })
                                            </div>
                                        </td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                    </div>
                </div>
            </div>
        </div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
    <link href="~/Content/jquery-ui.css" rel="stylesheet" />
    <link rel="stylesheet" type="text/css" href="~/Content/DataTables/datatables.min.css" />

    <script type="text/javascript" src="~/Content/DataTables/datatables.min.js"></script>

    @*<script src="~/Content/jquery.js"></script>*@
    <script src="~/Content/jquery-ui.js"></script>

    <script type="text/javascript">
        $(document).ready(function () {
            $('#table_id').DataTable();
        });

        setTimeout(function () {//fades out success message after 5 seconds
            $('#fadediv').fadeOut('fast');
        }, 5000); // can set to make a longer or shorter timeout

        $(function () {
            $("#txtSearch").autocomplete({
                source: '@Url.Action("Search", "Search")'
            });
        });
    </script>
}
