@model IEnumerable<OrderAnydayProject.Models.Vendor>

@{
    ViewBag.Title = "Vendors";
}

<h1>@(ViewBag.Title)</h1>
<section>
    <div>
        <div class="row">
            <div class="col-xs-12">
                <div class="box box-solid box-warning">
                    <div class="box-header with-border">
                        <h3 class="box-title">All Vendors</h3>

                        <div class="box-tools">
                            <div class="box-tools pull-right">
                                <p>
                                    @Html.ActionLink("Create New", "Create") <i class="fa fa-plus"></i>
                                </p>
                            </div>
                        </div>
                    </div>
                    <div class="box-body">
                        <div class="table-responsive">
                            <table id="table_id" class="table no-margin table-hover">
                                <thead>
                                    <tr>
                                        <th>
                                            @Html.DisplayNameFor(model => model.Vendor_Name)
                                        </th>
                                        <th>
                                            @Html.DisplayNameFor(model => model.Address)
                                        </th>
                                        <th>
                                            @Html.DisplayNameFor(model => model.Phone)
                                        </th>
                                        <th>
                                            @Html.DisplayNameFor(model => model.Website)
                                        </th>
                                        <th>
                                            @Html.DisplayNameFor(model => model.Account_Manager)
                                        </th>
                                        <th>
                                            @Html.DisplayNameFor(model => model.Notes)
                                        </th>
                                        <th></th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var item in Model)
                                    {
                                        <tr>
                                            <td>
                                                @Html.DisplayFor(modelItem => item.Vendor_Name)
                                            </td>
                                            <td>
                                                @Html.DisplayFor(modelItem => item.Address)
                                            </td>
                                            <td>
                                                @Html.DisplayFor(modelItem => item.Phone)
                                            </td>
                                            <td>
                                                <a href="@Html.DisplayFor(modelItem => item.Website)" target="_blank">
                                                    @Html.DisplayFor(modelItem => item.Website)
                                                </a>
                                            </td>
                                            <td>
                                                @Html.DisplayFor(modelItem => item.Account_Manager)
                                            </td>
                                            <td>
                                                @Html.DisplayFor(modelItem => item.Notes)
                                            </td>
                                            <td>
                                                <div class="btn-group-xs pull-right">
                                                    @Html.ActionLink("Edit", "Edit", new { id = item.VendorID }, new { @class = "btn btn-default" })
                                                    @Html.ActionLink("Details", "Details", new { id = item.VendorID }, new { @class = "btn btn-default" })
                                                    @Html.ActionLink("Delete", "Delete", new { id = item.VendorID }, new { @class = "btn btn-default" })
                                                </div>
                                            </td>
                                        </tr>
                                    }
                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>
                <!-- /.box-body -->
            </div>
            <!-- /.box -->
        </div>
    </div>
</section>
@section Scripts {


    <link href="~/Content/jquery-ui.css" rel="stylesheet" />
    <link rel="stylesheet" type="text/css" href="~/Content/DataTables/datatables.min.css" />

    <script type="text/javascript" src="~/Content/DataTables/datatables.min.js"></script>

    @*<script src="~/Content/jquery.js"></script>*@
    <script src="~/Content/jquery-ui.js"></script>

    <script type="text/javascript">
        $(document).ready(function () {
            $('#table_id').DataTable({
                colReorder: true,
                "pagingType": "full_numbers"
            });
        } );
        $(function () {
            $("#txtSearch").autocomplete({
                source: '@Url.Action("Search", "Search")'
            });
        });
    </script>
}